{
  "name": "ghmenu",
  "version": "1.2.0",
  "description": "dmenu-based GitHub launcher",
  "repository": "https://github.com/caseyWebb/pullmenu",
  "author": "Casey Webb <notcaseywebb@gmail.com> (https://caseyWebb.xyz)",
  "license": "WTFPL",
  "bin": {
    "ghmenu": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "dmenu",
    "github",
    "gh",
    "pull-request",
    "pull",
    "request",
    "pr",
    "prs",
    "issue",
    "issues",
    "repo",
    "repository",
    "repositories",
    "i3",
    "launcher",
    "linux"
  ],
  "scripts": {
    "build": "tsc && chmod +x ./dist/index.js",
    "lint": "eslint --ext .ts ./src",
    "release": "standard-version --sign && git push --follow-tags"
  },
  "dependencies": {
    "node-fetch": "^2.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@types/node": "^12.7.5",
    "@types/node-fetch": "^2.5.1",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.4.0",
    "eslint-config-profiscience": "^4.1.6",
    "husky": "^3.0.5",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "standard-version": "^7.0.0",
    "typescript": "^3.6.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "extends": "profiscience",
    "parserOptions": {
      "project": "./tsconfig.json"
    }
  },
  "husky": {
    "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
    "pre-commit": "pretty-quick --staged"
  },
  "prettier": {
    "arrowParens": "always",
    "semi": false,
    "singleQuote": true
  }
}
